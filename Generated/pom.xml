<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.blockwithme</groupId>
	<artifactId>PrimitiveFunc-Generated</artifactId>
	<version>1.0.0</version>

	<name>PrimitiveFunc-Generated</name>
	<description>Sub project of PrimitiveFunc - actually generates 'Function' interface based on user inputs.</description>
	<organization>
		<name>Sebastien Diot</name>
	</organization>
	<url>https://github.com/skunkiferous/PrimitiveFunc</url>

	<scm>
		<connection>scm:git:git@github.com:skunkiferous/PrimitiveFunc.git</connection>
		<developerConnection>scm:git:git@github.com:skunkiferous/PrimitiveFunc.git</developerConnection>
		<url>git@github.com:skunkiferous/PrimitiveFunc.git</url>
	</scm>

	<developers>
		<developer>
			<id>skunkiferous</id>
			<name>Sebastien Diot</name>
			<email>s.diot@eurodata.de</email>
		</developer>
	</developers>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<packageName>com.blockwithme.fn</packageName>
		<licenseFile>${project.basedir}/../APACHE_LICENSE_HEADER.txt</licenseFile>
		<interfaceName>F</interfaceName>
		<function>apply</function>
		<minParam>0</minParam>
		<maxParam>4</maxParam>
		<filter>com.blockwithme.fn.gen.OPlus4</filter>
		<exceptions></exceptions>
	</properties>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<compilerArgument>-g:none</compilerArgument>
				</configuration>
			</plugin>
			<!-- To clean the generated sources. -->
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>${project.basedir}/src</directory>
						</fileset>
						<fileset>
							<directory>${project.basedir}/target</directory>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<!-- To generate sources -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.1.1</version>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>java</goal>
						</goals>
						<configuration>
							<properties>
								<packageName>com.blockwithme.func</packageName>
								<licenseFile>${project.basedir}/../APACHE_LICENSE_HEADER.txt</licenseFile>
							</properties>
							<mainClass>com.blockwithme.fn.gen.GenFunc</mainClass>
							<arguments>
								<argument>${project.basedir}/src</argument>
								<argument>${licenseFile}</argument>
								<argument>${packageName}</argument>
								<argument>${interfaceName}</argument>
								<argument>${function}</argument>
								<argument>${minParam}</argument>
								<argument>${maxParam}</argument>
								<argument>${filter}</argument>
								<argument>${exceptions}</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>com.blockwithme</groupId>
						<artifactId>PrimitiveFunc</artifactId>
						<version>1.0.0</version>
					</dependency>
					<dependency>
						<groupId>com.blockwithme</groupId>
						<artifactId>PrimitiveFuncUtil</artifactId>
						<version>1.0.0</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<executions>
					<execution>
						<id>bundle-manifest</id>
						<phase>process-classes</phase>
						<goals>
							<goal>manifest</goal>
						</goals>
					</execution>
				</executions>
				<version>2.3.7</version>
				<extensions>true</extensions>
				<configuration>
					<manifestLocation>${project.basedir}/META-INF</manifestLocation>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package>com.blockwithme.gen.func</Export-Package>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<manifestFile>${project.basedir}/META-INF/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
			</plugin>
			<!-- To generate source jar -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>${basedir}/..</directory>
				<filtering>false</filtering>
				<includes>
					<include>LICENSE</include>
					<include>README.md</include>
				</includes>
			</resource>
		</resources>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.blockwithme</groupId>
			<artifactId>PrimitiveFunc</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.blockwithme</groupId>
			<artifactId>PrimitiveFuncUtil</artifactId>
			<version>1.0.0</version>
		</dependency>
	</dependencies>
</project>
